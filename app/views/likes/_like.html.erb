<% if !current_user?(task.user) %>
  <span class="like">
    <% if task.iine?(current_user) %>
      <%= form_for(task.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn transparent_btn") do %>
          <span id="task_text_body"><i class="far fa-smile fa-done"><%= task.likes_count %></i></span>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(task.likes.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :task_id, task.id %></div>
        <%= button_tag(class: "btn transparent_btn") do %>
          <span id="task_text_body"><i class="far fa-smile fa-iine-all"><%= task.likes_count %></i></span>
        <% end %>
      <% end %>
    <% end %>
  </span>
<% end %>