<% if !current_user?(task.user) %>
  <span class="like">
    <% if task.iine?(current_user) %>
      <%= form_for(task.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%# <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%# <%= content_tag :span, "#{task.likes_count}", class: "glyphicon glyphicon-star" %>
        <%= button_tag(class: "btn transparent_btn") do %>
          <i class="fas fa-star fa-fw"></i><%= task.likes_count %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(task.likes.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :task_id, task.id %></div>
        <%# <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%# <%= content_tag :span, "#{task.likes_count}", class: "glyphicon glyphicon-star-empty" %>
        <%= button_tag(class: "btn transparent_btn") do %>
          <i class="far fa-star fa-fw"></i><%= task.likes_count %>
        <% end %>
      <% end %>
    <% end %>
  </span>
<% end %>