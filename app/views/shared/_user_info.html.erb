<ol class="tasks">
<%= render @tasks_D %>
</ol>
<%= will_paginate @tasks_D %>
<% end %>
</div>

</p>
</div>

<div class="tab-pane" id="tab_like" role="tabpanel">
<p>

<!-- Task表示領域 -->
<div class="col-md-12">
<% if @tasks_L.any? %>
<h3>Tasks : <%= @tasks_L.count %></h3>
<ol class="tasks">
<%= render @tasks_L %>
</ol>
<%= will_paginate @tasks_L %>
<% end %>
</div>
</p>
</div>

</div>